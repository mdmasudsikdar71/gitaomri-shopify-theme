$(function() {


    // Product Slider
    var swiper = new Swiper(".mySwiper", {
        loop: true,
        loopFillGroupWithBlank: true,
        breakpoints: {
            768: {
                slidesPerView: 1,
                spaceBetween: 20
            },
            1024: {
                slidesPerView: 4,
                spaceBetween: 20
            }
        },
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        navigation: {
            nextEl: ".next",
            prevEl: ".prev",
        },
    });

    // Single Product
    var swiper = new Swiper(".ProductSwiper", {
        loop: false,
        spaceBetween: 10,
        slidesPerView: 4,
        freeMode: true,
        watchSlidesProgress: true,
    });
    var swiper2 = new Swiper(".ProductSwiper2", {
        loop: false,
        spaceBetween: 10,
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev"
        },
        thumbs: {
            swiper: swiper
        },
    });

    // ShopSlider
    var swiper = new Swiper(".ShopSlider", {
        spaceBetween: 30,
        effect: "fade",
        autoplay: {
            delay: 150000,
            disableOnInteraction: false
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev"
        }
    });

});