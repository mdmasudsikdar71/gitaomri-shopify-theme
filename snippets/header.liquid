<section class="Logo">

    <div class="container">

        <!-- DesktopMenu -->
        <div class="DesktopMenu">

            <div class="row">

                <!-- Logo -->
                <div class="col-lg-12">

                    <div class="logoImg">

                        <a href="/">{{ 'logo.jpg' | asset_url | img_tag: 'Gita Omri' }}</a>

                        <!-- RightSideBar -->
                        {% section 'right_sidebar' %}

                    </div>

                </div>

                <!-- MenuBar -->

                <div class="MenuBar">

                    <div class="col-lg-12">

                        <div class="MenuBar">

                            <div class="col-lg-12">

                                <div class="MenuItem">

                                    <ul>

                                        {% for link in linklists.main-menu.links %}
                                            {% assign child_list_handle = link.title | handleize %}
                                            {%- assign page_url = content_for_header | split:'"pageurl":"' | last | split:'"' | first | split: request.host | last | replace:'\/','/' | replace:'%20',' ' | replace:'\u0026','&'  -%}
                                            {% if linklists[child_list_handle].links != blank %}
                                            <li>
                                                <a class="{% if page_url == '/collections' or page_url == '/collections/spr23' or page_url == '/collections/omriessentials' %}active{% endif %}" href="{{ link.url }}">{{ link.title }}</a>
                                                <ul class="subMenu">
                                                    {% for childlink in linklists[child_list_handle].links %}
                                                    <li>
                                                        <a class="{% if childlink.url == page_url %}active{% endif %}" href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                                                    </li>
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                            {% else %}
                                                <li>
                                                    {% if link.url == "https://runway360.cfda.com/designers/gita-omri-2" %}
                                                        <a href="{{ link.url }}" target="_blank">{{ link.title }}</a>
                                                    {% else %}
                                                        <a class="{% if link.url == page_url %}active{% endif %}" href="{{ link.url }}">{{ link.title }}</a>
                                                    {% endif %}
                                                </li>
                                            {% endif %}
                                        {% endfor %}

                                    </ul>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <!-- MobileMenu -->
        <div class="MobileMenu">

            <div class="logoImg">

                <a href="index.html"><img src="frontend_assets/images/logo.jpg" alt=""></a>

                <div class="Bag">
                    <button type="button">
                        <a href="view_cart.html">
                            <img src="frontend_assets/images/shopping-bag.png" alt="">
                            <span>0</span>
                        </a>
                    </button>

                </div>


                <button type="button" class="MobileMenuIcon" data-bs-toggle="modal" data-bs-target="#MobileModal">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Modal -->
                <div class="modal fade" id="MobileModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

                    <div class="modal-dialog">

                        <div class="modal-content">

                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                <img src="frontend_assets/images/white_close.png" alt="">
                            </button>

                            <div class="modal-body">

                                <div class="MenuItem">

                                    <ul>

                                        <li class="dropdown">
                                            <a href="" class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false"> Shop <i class="fas fa-chevron-down"></i> </a>

                                            <ul class="subMenu dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                <li><a href="spring.html">SPRING 23</a></li>
                                                <li><a href="Omri_Essential.html">OMRI ESSENTIALS</a></li>
                                            </ul>

                                        </li>
                                        <li> <a href="mission.html"> Our Mission </a> </li>
                                        <li> <a href="about.html"> About Gita </a> </li>
                                        <li> <a href="collection.html"> Collection </a> </li>
                                        <li> <a href="media.html"> Media </a> </li>

                                    </ul>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>



    </div>

</section>