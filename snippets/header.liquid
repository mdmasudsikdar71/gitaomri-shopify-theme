<section class="Logo">

    <div class="container">

        <!-- DesktopMenu -->
        <div class="DesktopMenu">

            <div class="row">

                <!-- Logo -->
                <div class="col-lg-12">

                    <div class="logoImg">

                        <a href="/">{{ 'logo.jpg' | asset_url | img_tag: 'Gita Omri' }}</a>

                        <div class="Bag">
                            <button type="button" id="addToCartBtn" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                                {{ 'shopping-bag.png' | asset_url | img_tag: 'Gita Omri' }}
                                <span class="item-count-number">0</span>
                            </button>

                        </div>

                        <!-- RightSideBar -->
                        <div class="RightSideBar">

                            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">

                                <div class="offcanvas-header">
                                    <button type="button" data-bs-dismiss="offcanvas" aria-label="Close"><i class="fas fa-chevron-right"></i></button>
                                    <h5>Cart</h5>
                                </div>

                                <div class="offcanvas-body">

                                    <!-- product Item -->
                                    <div class="RightSideBarCart">

                                        {% for item in cart.items %}
                                            <div class="RightSideBarItem">

                                                <div class="img">
                                                    <a href="{{ item.url }}"><img src="{{ item.image | img_url }}" width="80px" height="80px" alt=""></a>
                                                </div>

                                                <div class="text">
                                                    <h5>{{ item.product.title }}</h5>
                                                    {% comment %}<h5>BLOUSE W/ PEPLUM</h5>{% endcomment %}
                                                    <p>{{ item.price | money }}</p>

                                                    <div class="input">
                                                        <div class="minus" onclick="updateCart('minus', '{{ item.id }}')"><img src="{{ 'minus.png' | asset_url }}" alt=""></div>
                                                        <input type="text" onchange="clearFromCart('{{ item.id }}', event.target.value)" class="{{ item.id }}" value="{{ item.quantity }}" id="">
                                                        <div class="plus" onclick="updateCart('plus', '{{ item.id }}')"><img src="{{ 'plus.png' | asset_url }}" alt=""></div>
                                                    </div>

                                                </div>

                                                <div class="closeHover">
                                                    <img src="{{ 'close.png' | asset_url }}" alt="">
                                                </div>

                                            </div>
                                        {% endfor %}

                                    </div>

                                    <!-- subtotal -->
                                    <div class="subtotal">

                                        <h4>Subtotal</h4>
                                        <h5 class="item_total_price_class"></h5>

                                    </div>

                                    <!-- viewCart -->
                                    <div class="viewCart">
                                        <a href="/cart">View Cart</a>
                                    </div>


                                </div>

                            </div>

                        </div>

                    </div>

                </div>

                <!-- MenuBar -->

                <div class="MenuBar">

                    <div class="col-lg-12">

                        <div class="MenuBar">

                            <div class="col-lg-12">

                                <div class="MenuItem">

                                    <ul>

                                        {% for link in linklists.main-menu.links %}
                                            {% assign child_list_handle = link.title | handleize %}
                                            {% if linklists[child_list_handle].links != blank %}
                                            <li>
                                                <a href="{{ link.url }}">{{ link.title }}</a>
                                                <ul class="subMenu">
                                                    {% for childlink in linklists[child_list_handle].links %}
                                                    <li>
                                                        <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                                                    </li>
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                            {% else %}
                                                <li>
                                                    {% if link.url == "https://runway360.cfda.com/designers/gita-omri-2" %}
                                                        <a href="{{ link.url }}" target="_blank">{{ link.title }}</a>
                                                    {% else %}
                                                        <a href="{{ link.url }}">{{ link.title }}</a>
                                                    {% endif %}
                                                </li>
                                            {% endif %}
                                        {% endfor %}

                                    </ul>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <!-- MobileMenu -->
        <div class="MobileMenu">

            <div class="logoImg">

                <a href="index.html"><img src="frontend_assets/images/logo.jpg" alt=""></a>

                <div class="Bag">
                    <button type="button">
                        <a href="view_cart.html">
                            <img src="frontend_assets/images/shopping-bag.png" alt="">
                            <span>0</span>
                        </a>
                    </button>

                </div>


                <button type="button" class="MobileMenuIcon" data-bs-toggle="modal" data-bs-target="#MobileModal">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Modal -->
                <div class="modal fade" id="MobileModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

                    <div class="modal-dialog">

                        <div class="modal-content">

                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                <img src="frontend_assets/images/white_close.png" alt="">
                            </button>

                            <div class="modal-body">

                                <div class="MenuItem">

                                    <ul>

                                        <li class="dropdown">
                                            <a href="" class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false"> Shop <i class="fas fa-chevron-down"></i> </a>

                                            <ul class="subMenu dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                <li><a href="spring.html">SPRING 23</a></li>
                                                <li><a href="Omri_Essential.html">OMRI ESSENTIALS</a></li>
                                            </ul>

                                        </li>
                                        <li> <a href="mission.html"> Our Mission </a> </li>
                                        <li> <a href="about.html"> About Gita </a> </li>
                                        <li> <a href="collection.html"> Collection </a> </li>
                                        <li> <a href="media.html"> Media </a> </li>

                                    </ul>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>



    </div>

</section>